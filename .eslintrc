{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "eslint-plugin-import",
    "react"
  ],
  "rules": {
    "import/newline-after-import": [ "error", { "count": 2 } ],
    "indent": [
      "error",
      2
    ],
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": "warn",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
